@{
}
@model List<Movies>


<style>
  table {
    border-collapse: collapse;
    width: 100%;
  }

  th, td {
    border: 1px solid black;
    padding: 8px;
    text-align: left;
  }

  th {
    background-color: #f2f2f2;
  }
</style>

<table>
  <thead class="fw-bold">
    <tr>
      <th>MovieId</th>
      <th>CategoryId</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Rating</th>
      <th>Edited</th>
      <th>LentTo</th>
      <th>CopiedToPlex</th>
      <th>Notes</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var x in Model)
    {
      <tr>
        <td>@x.MovieId</td>
        <td>@x.CategoryId</td>
        <td>@x.Title</td>
        <td>@x.Year</td>
        <td>@x.Director</td>
        <td>@x.Rating</td>
        <td>@x.Edited</td>
        <td>@x.LentTo</td>
        <td>@x.CopiedToPlex</td>
        <td>@x.Notes</td>
        <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a></td>
        <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a></td>
      </tr>
    }
  </tbody>
</table>
