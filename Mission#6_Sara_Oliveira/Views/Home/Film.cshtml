



@model Movies

<h1> Thank You For Collaborating</h1>
<form method="post">

<input type="hidden" asp-for="MovieId">
<label asp-for="CategoryId">Category: </label>
<select asp-for="CategoryId">
    <option value="">Select a Major</option>
    @foreach (var category in ViewBag.Categories)
    {
        <option value="@category.CategoryId">@category.Category</option>
    }
</select> 
<br />
<label asp-for="Title">Title: </label>
<input asp-for="Title" />
<br />
<label asp-for="Year">Year: </label>
<input asp-for="Year"/>
<br />
<label asp-for="Director">Director: </label>
<input asp-for="Director"/>
<br />
<label asp-for="Rating">Rating: </label>
<select asp-for="Rating">
<option value="G"> G </option>
<option value="PG"> PG </option>
<option value="PG-13"> PG-13 </option>
<option value="R"> R </option>
</select>
<br />
<label asp-for="Edited">Edited: </label>
<select asp-for="Edited">
<option value="true"> Yes </option>
<option value="false"> No </option>
<br />
</select>
<br />
<label asp-for="LentTo">Lent To: </label>
<input asp-for="LentTo"/>
<br />

<br />
<label asp-for="CopiedToPlex">CopiedToPlex: </label>
<select asp-for="CopiedToPlex"/>
    <option value="true"> Yes </option>
    <option value="false"> No </option>
</select>
<br />

<label asp-for="Notes">Notes: </label>
<input asp-for="Notes"/>


<button type="submit"> Add Movie to Collection</button>
<div asp-validation-summary= "All"></div>
</form>


 <div>
    <a asp-controller="Home" asp-action="MoviesList"> Check Out The Movies We Have Listed></a>

</div>